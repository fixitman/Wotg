<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/groupListFragment">
    <fragment
        android:id="@+id/groupListFragment"
        android:name="com.fimappware.willofthegods.ui.group.GroupListFragment"
        android:label="Group List"
        tools:layout="@layout/fragment_group_list">
        <action
            android:id="@+id/action_groupListFragment_to_groupItemsListFragment"
            app:destination="@id/groupItemsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupItemsListFragment"
        android:name="com.fimappware.willofthegods.ui.groupitem.GroupItemsListFragment"
        android:label=""
        tools:layout="@layout/fragment_group_items_list" >
        <action
            android:id="@+id/action_groupItemsListFragment_to_addEditItemFragment"
            app:destination="@id/addEditItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditItemFragment"
        android:name="com.fimappware.willofthegods.ui.groupitem.AddEditItemFragment"

        tools:layout="@layout/fragment_add_edit_item" >
        <argument
            android:name="item"
            app:argType="com.fimappware.willofthegods.data.GroupItem"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>